#!/bin/bash

# Todo:
# Add blacklist/whitelist functionality per channel for scripts
# Parse an optional file for each script to optimize/customize script access

cwd=$(dirname "$0")
scriptdir="$cwd/../scripts"

# This file multiplexes every output line to every script in the script folder.

shopt -s nullglob
for script in $scriptdir/*; do
	[ -x "$script" ] && $script $@
done
